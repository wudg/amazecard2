{
    "compilerOptions": {
        "target": "es2017",
        "allowSyntheticDefaultImports": false,
        "baseUrl": "./",
        "paths": {
            "@src/*": [
                "src/*"
            ],
            "@assets/*": [
                "src/assets/*"
            ],
            "@style/*": [
                "src/style/*"
            ],
            "@util/*": [
                "src/util/*"
            ],
            "@pages/*": [
                "src/pages/*"
            ],
            "@api/*": [
                "src/api/*"
            ],
            "@components/*": [
                "src/components/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src"
    ]
}